@model sys.Models.Assignment.CreateAssignment
@{
    ViewBag.Title = "Create Assignment";
    Layout = "~/Views/Shared/_LayoutPageTeacher.cshtml";
}
@using (Html.BeginForm("Create", "CreateAssignments", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

<div class="custom-block">
    <h5 class="mb-4">Assignment Details</h5>

    <div class="form-group">
        @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Subject, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.StartDate, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <div class="input-group">
                @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", type = "date" })
                <span class="input-group-text"><i class="bi-calendar3"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(m => m.EndDate, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <div class="input-group">
                @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", type = "date" })
                <span class="input-group-text"><i class="bi-calendar3"></i></span>
            </div>
            @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.Label("Upload File", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <input type="file" name="FileUpload" class="form-control" />
            @Html.ValidationMessage("FileUpload", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-sm btn-info">Create</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-outline-secondary ms-2" })
        </div>
    </div>
</div>
}
